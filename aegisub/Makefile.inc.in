#######
# FLAGS
#######
CFLAGS              = @CFLAGS@
CXXFLAGS            = @CXXFLAGS@
CPPFLAGS            = @CPPFLAGS@
CFLAGS_DEP          = -MD -MP
LDFLAGS             = @LDFLAGS@
INSTALL_FLAGS       = -m 664
CCACHE_ENV          = CCACHE_SLOPPINESS=time_macros
LIB_SHARED_LINK     = -shared -Wl,-soname -Wl,$(LIB_SHARED_FULL)
